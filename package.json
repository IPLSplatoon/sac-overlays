        "Vincent Lee <vlee@vlee.me.uk>",
        "BrushStrokes (https://brush.rip)",
        "TheMoo (https://twitter.com/TheMoo_spl)"
    ],
    "files": [
        "graphics"
    ],
    "scripts": {
        "build": "cross-env NODE_ENV=production webpack",
        "clean": "trash node_modules/.cache && trash graphics",
        "cleanbuild": "npm run clean && npm run build",
        "start": "node ../..",
        "watch": "webpack -w",
        "lint": "eslint ./src",
        "fix": "eslint ./src --fix",
        "devbuild": "webpack"
    },
    "nodecg": {
        "compatibleRange": "^1.7.0 || ^2.0.0",
        "graphics": [
            {
                "file": "main.html",
                "width": 1920,
                "height": 1080
            },
            {
                "file": "break.html",
                "width": 1920,
                "height": 1080
            }
        ]
    },
